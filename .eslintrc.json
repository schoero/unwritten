{
  "extends": "@schoero",
  "plugins": ["sort-exports"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020
      }
    },
    {
      "files": [
        "**/typeguards/*.ts",
        "**/compiler/mixins/jsdoc.ts",
        "**/renderer/**/markdown/index.ts",
        "**/renderer/**/html/index.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "padding-line-between-statements": [
          "warn",
          { "blankLine": "always", "next": "export", "prev": "export" }
        ],
        "sort-exports/sort-exports": ["warn", { "sortDir": "asc" }]
      }
    }
  ]
}
