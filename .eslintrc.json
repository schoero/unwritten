{
  "extends": "@schoero",
  "plugins": ["sort-exports"],
  "overrides": [
    {
      "files": ["**/typeguards/*.ts"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "padding-line-between-statements": [
          "warn",
          { "blankLine": "always", "next": "export", "prev": "export" }
        ],
        "sort-exports/sort-exports": ["warn", { "sortDir": "asc" }]
      }
    }
  ]
}
