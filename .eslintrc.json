{
  "extends": "@schoero",
  "plugins": ["sort-exports"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020
      },
      "rules": {
        "no-restricted-imports": [
          "error", {
            "paths": [
              "node:test",
              "test"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "**/typeguards/*.ts",
        "**/utils/*.ts",
        "**/interpreter/shared/jsdoc.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "sort-exports/sort-exports": ["warn", { "sortDir": "asc" }]
      }
    },
    {
      "files": [
        "**/renderrer/markup/html/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-restricted-imports": [
          "error", {
            "patterns": [
              "unwritten:renderer:markdown*"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "**/renderrer/markup/markdown/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-restricted-imports": [
          "error", {
            "patterns": [
              "unwritten:renderer:html*"
            ]
          }
        ]
      }
    }
  ]
}
