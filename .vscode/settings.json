{


  //-- ESLint

  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json5]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.validate": ["javascript", "typescript", "json", "jsonc", "json5", "yaml"],
  "prettier.enable": false, // eslint-disable-next-line jsonc/sort-keys
  "editor.formatOnSave": false, // eslint-disable-next-line jsonc/sort-keys


  //-- File nesting

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.d.ts": "$(capture).test-d.ts",
    "*.ts": "$(capture).test.ts,$(capture).test.snap"
  },


  //-- ES module import

  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.useAliasesForRenames": true,


  //-- Markdown

  // eslint-disable-next-line jsonc/sort-keys
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.rulers": [
      40,
      80,
      119
    ],
    "editor.wordWrapColumn": 119
  },


  //-- VSCode

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.markdownlint": true,
    "source.organizeImports": false
  },

  "editor.rulers": [
    119
  ],

  "search.exclude": {
    "lib": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"

}
