{
  "extends": "@schoero/ts-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "unwritten:*": ["src/*"],
      "unwritten:api:*": ["src/api/*"],
      "unwritten:bin:*": ["src/bin/*"],
      "unwritten:compiler:*": ["src/compiler/*"],
      "unwritten:compiler:entities": ["src/compiler/ast/entities/index.js"],
      "unwritten:compiler:types": ["src/compiler/ast/types/index.js"],
      "unwritten:logger:*": ["src/logger/*"],
      "unwritten:renderer:*": ["src/renderer/*"],
      "unwritten:tests:*": ["tests/*"],
      "unwritten:types:*": ["src/type-definitions/*"],
      "unwritten:utils:*": ["src/utils/*"]
    },
    "target": "ES2020"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/local/test.test.tsx"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
