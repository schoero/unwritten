{
  "version": "0.0.1",
  "type": "module",
  "name": "doc-creator",
  "description": "A cli tool that auto generates documentation from your JavaScript or TypeScript project by utilizing TSDoc or JSDoc comments.",
  "license": "MIT",
  "author": "Roger Schönbächler",
  "homepage": "https://github.com/schoero/doc-creator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schoero/doc-creator.git"
  },
  "bugs": {
    "url": "https://github.com/schoero/doc-creator/issues"
  },
  "main": "lib/api/index.js",
  "scripts": {
    "build": "node_modules/.bin/tsc --project tsconfig.production.json && npm run schema",
    "build:ci": "npm run build -- --noEmit",
    "eslint": "node_modules/.bin/eslint --ext .ts,.tsx,.js,.jsx,.json,.jsonc,.yml ./",
    "eslint:ci": "npm run eslint -- --max-warnings 0",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run eslint && npm run markdownlint",
    "lint:ci": "npm run eslint:ci && npm run markdownlint:ci",
    "lint:fix": "npm run eslint:fix && npm run markdownlint:fix",
    "markdownlint": "node_modules/.bin/markdownlint-cli2 '**/*.md' '#node_modules'",
    "markdownlint:ci": "npm run markdownlint",
    "markdownlint:fix": "node_modules/.bin/markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "schema": "npx node_modules/.bin/ts-json-schema-generator --path './src/types/config.ts' --type ConfigWithSchema --tsconfig ./tsconfig.production.json --out schemas/renderer/config.json",
    "spellcheck": "node_modules/.bin/cspell lint **/{*,.*}/**/* --no-default-configuration",
    "spellcheck:ci": "node_modules/.bin/cspell lint **/{*,.*}/**/* --no-default-configuration  --no-progress",
    "test": "vitest -c ./vite.config.ts",
    "typecheck": "vitest typecheck --run -c ./vite.config.ts test-d.ts"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@schoero/cspell-config": "^1.2.0",
    "commander": "^9.4.1",
    "minimatch": "^5.1.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@schoero/eslint-config": "^1.26.1",
    "@schoero/markdownlint-config": "^1.1.2",
    "@schoero/ts-config": "^0.3.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.11.9",
    "ts-json-schema-generator": "^1.1.2",
    "vitest": "^0.25.2",
    "vitest-github-actions-reporter": "^0.9.0"
  },
  "keywords": [
    "documentation",
    "docs",
    "api",
    "generator",
    "description",
    "generation",
    "typescript",
    "javascript"
  ],
  "volta": {
    "node": "19.1.0",
    "npm": "9.1.2"
  }
}
