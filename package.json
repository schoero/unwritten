{
  "version": "0.0.1",
  "type": "module",
  "name": "unwritten",
  "description": "unwritten is a cli tool that auto generates documentation from your JavaScript or TypeScript project by utilizing TSDoc or JSDoc comments.",
  "license": "MIT",
  "author": "Roger Schönbächler",
  "homepage": "https://github.com/schoero/unwritten#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schoero/unwritten.git"
  },
  "bugs": {
    "url": "https://github.com/schoero/unwritten/issues"
  },
  "main": "lib/api/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.production.json && npm run schema",
    "build:ci": "npm run build -- --noEmit",
    "eslint": "eslint --ext .ts,.tsx,.js,.jsx,.json,.jsonc,.yml,.md ./",
    "eslint:ci": "npm run eslint -- --max-warnings 0",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run eslint && npm run markdownlint",
    "lint:ci": "npm run eslint:ci && npm run markdownlint:ci",
    "lint:fix": "npm run eslint:fix && npm run markdownlint:fix",
    "markdownlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "markdownlint:ci": "npm run markdownlint",
    "markdownlint:fix": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "schema": "ts-json-schema-generator --path './src/types/config.ts' --type ConfigWithSchema --tsconfig ./tsconfig.production.json --out schemas/renderer/config.json",
    "spellcheck": "cspell lint",
    "spellcheck:ci": "npm run spellcheck -- --no-progress",
    "test": "vitest -c ./vite.config.ts",
    "typecheck": "vitest typecheck --run -c ./vite.config.ts test-d.ts"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "cac": "^6.7.14",
    "minimatch": "^9.0.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@schoero/cspell-config": "^1.6.14",
    "@schoero/eslint-config": "^1.38.1",
    "@schoero/markdownlint-config": "^1.1.4",
    "@schoero/ts-config": "^0.3.2",
    "@schoero/vite-config": "^0.0.20",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.15.13",
    "eslint-plugin-sort-exports": "^0.8.0",
    "ts-json-schema-generator": "^1.2.0"
  },
  "keywords": [
    "documentation",
    "docs",
    "api",
    "generator",
    "description",
    "generation",
    "typescript",
    "javascript"
  ],
  "volta": {
    "node": "20.0.0",
    "npm": "9.6.4"
  }
}
