{
  "version": "0.1.0",
  "type": "module",
  "name": "doc-creator",
  "description": "A cli tool that auto generates documentation from your JavaScript or TypeScript project by utilizing TSDoc or JSDoc comments.",
  "license": "MIT",
  "author": "Roger Schönbächler",
  "homepage": "https://github.com/schoero/doc-creator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schoero/doc-creator.git"
  },
  "bugs": {
    "url": "https://github.com/schoero/doc-creator/issues"
  },
  "main": "lib/api/index.js",
  "scripts": {
    "eslint": "node_modules/.bin/eslint --ext .ts,.tsx,.js,.jsx,.json,.jsonc,.yml ./",
    "eslint:ci": "npm run lint -- --max-warnings 0",
    "eslint:fix": "npm run lint -- --fix",
    "lint": "npm run eslint && npm run markdownlint",
    "lint:ci": "npm run eslint:ci && npm run markdownlint:ci",
    "lint:fix": "npm run eslint:fix && npm run markdownlint:fix",
    "markdownlint": "node_modules/markdownlint-cli2/markdownlint-cli2.js '**/*.md' '#node_modules'",
    "markdownlint:ci": "npm run markdownlint",
    "markdownlint:fix": "node_modules/markdownlint-cli2/markdownlint-cli2-fix.js '**/*.md' '#node_modules'",
    "test": "vitest -c ./vite.config.ts"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "minimatch": "^5.1.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@schoero/eslint-config": "^1.22.0",
    "@schoero/markdownlint-config": "^1.1.0",
    "@schoero/ts-config": "^0.2.2",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.11.9",
    "vitest": "^0.24.5",
    "vitest-github-actions-reporter": "^0.9.0"
  },
  "keywords": [
    "documentation",
    "docs",
    "api",
    "generator",
    "description",
    "generation",
    "typescript",
    "javascript"
  ],
  "volta": {
    "node": "19.0.0",
    "npm": "9.0.0"
  }
}
